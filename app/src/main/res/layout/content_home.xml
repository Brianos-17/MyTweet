<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/addTweet"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="88dp"
        android:layout_height="63dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_add_tweet"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/twitter_icon"
        app:layout_constraintLeft_toRightOf="@+id/addTweet"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/timelineDivider"
        app:layout_constraintVertical_bias="0.508"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="88dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/ic_settings_black_24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/timelineDivider"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/addTweet" />

</android.support.constraint.ConstraintLayout>